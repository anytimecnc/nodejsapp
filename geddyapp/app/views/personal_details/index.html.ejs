<div class="hero-unit">
  <h2>All PersonalDetails</h2>
  <%- linkTo('Create a new PersonalDetail', addPersonalDetailPath, {class: 'btn pull-right'}); %>
</div>

<div id="personalDetails-list">
<% if (personalDetails) { %>
<% for (var i = 0, ii = personalDetails.length; i < ii; i++) { %>
  <div class="row list-item" id="personalDetail-<%= personalDetails[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(personalDetails[i].name, personalDetailPath(personalDetails[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= personalDetails[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>